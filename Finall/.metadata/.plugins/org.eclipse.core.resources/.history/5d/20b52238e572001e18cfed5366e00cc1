package com.rubypaper.controller;

import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;

import com.rubypaper.dto.FriendDTO;

@Controller
public class Controllerfriend {
	@GetMapping("/form")
	public String form1()
	{
		return "/post/form";
	}
	@PostMapping("/view")
	public String view1(FriendDTO friendDTO, Model model)
	{
		System.out.println("------------------------------");
		System.out.println(friendDTO.getName());		
		System.out.println(friendDTO.getMbti());
		System.out.println(friendDTO.getGender());
		System.out.println(friendDTO.getTime());
		System.out.println("------------------------------");
		
		model.addAttribute("heading","친구 과제");
		return "/post/view";
	}
}
